@page
@model CandidateManagement_GUI.Pages.CandidateProfilePages.DeleteModel
@{
    ViewData["Title"] = "Delete Candidate";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="card-title mb-0">
                <i class="bi bi-exclamation-triangle-fill"></i>
                Confirm Delete
            </h2>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                Are you sure you want to delete this candidate profile? This action cannot be undone.
            </div>

            <div class="candidate-info">
                <h3 class="section-title">
                    <i class="bi bi-person"></i>
                    Candidate Details
                </h3>

                <div class="info-grid">
                    <div class="info-item">
                        <label>Candidate ID</label>
                        <p>@Model.CandidateProfile.CandidateId</p>
                    </div>

                    <div class="info-item">
                        <label>Full Name</label>
                        <p>@Model.CandidateProfile.Fullname</p>
                    </div>

                    <div class="info-item">
                        <label>Birthday</label>
                        <p>@Model.CandidateProfile.Birthday?.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="info-item">
                        <label>Profile URL</label>
                        <p>
                            @if (string.IsNullOrEmpty(Model.CandidateProfile.ProfileUrl))
                            {
                                <span class="text-muted">Not provided</span>
                            }
                            else
                            {
                                <span class="profile-url">@Model.CandidateProfile.ProfileUrl</span>
                            }
                        </p>
                    </div>

                    <div class="info-item">
                        <label>Job Posting ID</label>
                        <p>@Model.CandidateProfile.PostingId</p>
                    </div>

                    <div class="info-item full-width">
                        <label>Profile Description</label>
                        <p>
                            @if (string.IsNullOrEmpty(Model.CandidateProfile.ProfileShortDescription))
                            {
                                <span class="text-muted">No description available</span>
                            }
                            else
                            {
                                @Model.CandidateProfile.ProfileShortDescription
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="border-top pt-4 mt-4">
                <form method="post" class="d-flex justify-content-end gap-2">
                    <input type="hidden" asp-for="CandidateProfile.CandidateId" />
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Candidate
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 20px;
        }

        .card-header {
            padding: 1.5rem;
        }

        .alert {
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.25rem;
            color: #495057;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #eee;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .info-item {
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 8px;
        }

        .info-item.full-width {
            grid-column: 1 / -1;
        }

        .info-item label {
            display: block;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            text-transform: uppercase;
        }

        .info-item p {
            margin: 0;
            color: #212529;
            font-size: 1rem;
        }

        .profile-url {
            word-break: break-all;
            color: #0d6efd;
        }

        .btn {
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.2s ease-in-out;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #bb2d3b;
            border-color: #b02a37;
            transform: translateY(-1px);
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5c636a;
            border-color: #565e64;
            transform: translateY(-1px);
        }

        /* Responsive adjustments */
        @@media (max-width: 767.98px) {
            .info-grid {
                grid-template-columns: 1fr;
            }

            .card-header {
                padding: 1rem;
            }

            .card-title {
                font-size: 1.5rem;
            }

            .btn {
                width: 100%;
                margin: 0.25rem 0;
            }

            .d-flex.justify-content-end {
                flex-direction: column-reverse;
            }

            .gap-2 {
                gap: 0.5rem !important;
            }
        }

        /* Animation */
        .card {
            animation: fadeIn 0.3s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Text muted styling */
        .text-muted {
            color: #6c757d !important;
            font-style: italic;
        }
    </style>
}