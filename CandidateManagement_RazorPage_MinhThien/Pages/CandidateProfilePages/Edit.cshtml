@page
@model CandidateManagement_GUI.Pages.CandidateProfilePages.EditModel
@{
    ViewData["Title"] = "Edit Candidate";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark position-relative">
            <h2 class="card-title mb-0">
                <i class="bi bi-pencil-square"></i>
                Edit Candidate Profile
            </h2>
            <p class="text-muted mb-0 mt-2">ID: @Model.CandidateProfile.CandidateId</p>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="CandidateProfile.CandidateId" />

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="edit-section">
                            <h3 class="section-title">
                                <i class="bi bi-person"></i>
                                Personal Information
                            </h3>

                            <div class="mb-4">
                                <label asp-for="CandidateProfile.Fullname" class="form-label">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-badge"></i>
                                    </span>
                                    <input asp-for="CandidateProfile.Fullname" class="form-control" required />
                                </div>
                                <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="CandidateProfile.Birthday" class="form-label">Birthday</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-calendar"></i>
                                    </span>
                                    <input asp-for="CandidateProfile.Birthday" class="form-control" type="date" required />
                                </div>
                                <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="edit-section">
                            <h3 class="section-title">
                                <i class="bi bi-briefcase"></i>
                                Professional Details
                            </h3>

                            <div class="mb-4">
                                <label asp-for="CandidateProfile.ProfileUrl" class="form-label">Profile URL</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-link-45deg"></i>
                                    </span>
                                    <input asp-for="CandidateProfile.ProfileUrl" class="form-control" />
                                </div>
                                <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="CandidateProfile.PostingId" class="form-label">Job Posting</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-briefcase"></i>
                                    </span>
                                    <select asp-for="CandidateProfile.PostingId"
                                            asp-items="@(ViewData["PostingId"] as SelectList)"
                                            class="form-select" required>
                                        <option value="">-- Select Job Posting --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="CandidateProfile.ProfileShortDescription" class="form-label">Profile Description</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-file-text"></i>
                                    </span>
                                    <textarea asp-for="CandidateProfile.ProfileShortDescription" 
                                            class="form-control" rows="4" required></textarea>
                                </div>
                                <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="border-top pt-4 mt-4">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 20px;
        }

        .card-header {
            background: linear-gradient(45deg, #ffc107, #ffdb4d);
            padding: 1.5rem;
        }

        .section-title {
            font-size: 1.25rem;
            color: #495057;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #eee;
        }

        .edit-section {
            padding: 1rem;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .input-group {
            border-radius: 8px;
            overflow: hidden;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-right: none;
        }

        .form-control, .form-select {
            border-left: none;
            padding: 0.6rem 0.75rem;
            transition: all 0.2s ease-in-out;
        }

        .form-control:focus, .form-select:focus {
            border-color: #ced4da;
            box-shadow: none;
        }

        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
        }

        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control,
        .input-group:focus-within .form-select {
            border-color: #ffc107;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .btn {
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.2s ease-in-out;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #212529;
        }

            .btn-warning:hover {
                background-color: #ffca2c;
                border-color: #ffca2c;
                transform: translateY(-1px);
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #5c636a;
                border-color: #565e64;
                transform: translateY(-1px);
            }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        /* Hiệu ứng hover cho input groups */
        .input-group:hover {
            transform: translateY(-1px);
            transition: transform 0.2s ease;
        }

        /* Custom styles for select dropdown */
        .form-select {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 16px 12px;
        }

        /* Responsive adjustments */
        @@media (max-width: 767.98px) {
            .card-header {
                padding: 1rem;
            }

            .card-title {
                font-size: 1.5rem;
            }

            .edit-section {
                padding: 0.5rem;
            }

            .col-md-6:first-child {
                margin-bottom: 2rem;
            }

            .btn {
                width: 100%;
                margin: 0.25rem 0;
            }

            .d-flex.justify-content-end {
                flex-direction: column-reverse;
            }

            .gap-2 {
                gap: 0.5rem !important;
            }
        }

        /* Animation for validation feedback */
        .was-validated .form-control:valid,
        .was-validated .form-select:valid {
            border-color: #198754;
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23198754' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }

        .was-validated .form-control:invalid,
        .was-validated .form-select:invalid {
            border-color: #dc3545;
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}